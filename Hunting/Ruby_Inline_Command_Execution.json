{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
      "apiVersion": "2020-08-01",
      "name": "[concat(parameters('workspace'), '/Ruby_Inline_Command_Execution')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "eTag": "*",
        "displayName": "Ruby Inline Command Execution",
        "category": "Hunting Queries",
        "query": "DeviceProcessEvents\n| where ProcessCommandLine contains \" -e\" and (FolderPath endswith \"\\\\ruby.exe\" or ProcessVersionInfoOriginalFileName =~ \"ruby.exe\")",
        "version": 1,
        "tags": [
          {
            "name": "description",
            "value": "etects execution of ruby using the \"-e\" flag. This is could be used as a way to launch a reverse shell or execute live ruby cod"
          },
          {
            "name": "tactics",
            "value": "execution"
          },
          {
            "name": "relevantTechniques",
            "value": "T1059"
          }
        ]
      }
    }
  ]
}
